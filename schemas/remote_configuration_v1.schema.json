{
  "$id": "remote_configuration_v1.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "An object containing the set of rules used by the conditional gatherer.",
  "descriptions": "A data structure used by the Insights Operator Gathering Conditions Service v1 API to return the remote configurations for the conditional gathering.",
  "examples": [
    {
      "rules": [
        {
          "conditions": [
            {
              "type": "alert_is_firing",
              "alert": {
                "name": "APIRemovedInNextEUSReleaseInUse"
              }
            }
          ],
          "gathering_functions": {
            "api_request_counts_of_resource_from_alert": {
              "alert_name": "APIRemovedInNextEUSReleaseInUse"
            }
          }
        }
      ]
    }
  ],
  "type": "object",
  "required": ["rules"],
  "properties": {
    "rules": {
      "$ref": "gathering_rules.schema.json"
    },
    "version": {
      "type": "string"
    }
  },
  "title": "Remote configuration for Conditional Gathering"
}
