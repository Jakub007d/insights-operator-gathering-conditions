{
  "conditional_gathering_rules": [
    {
      "conditions": [
        {
          "alert": {
            "name": "KubePodCrashLooping"
          },
          "type": "alert_is_firing"
        }
      ],
      "gathering_functions": {
        "logs_of_namespace": {
          "namespace": "extra",
          "tail_lines": 100
        }
      }
    }
  ],
  "container_logs": [
    {
      "messages": [
        "sample message 1-1",
        "sample message 1-2"
      ],
      "namespace": "sample-request-1",
      "pod_name_regex": "pod-prefix-1-.*"
    },
    {
      "messages": [
        "sample message 2-1",
        "sample message 2-2"
      ],
      "namespace": "sample-request-2",
      "pod_name_regex": "pod-prefix-2-.*"
    }
  ],
  "version": "0.0.1"
}
